@model CCIH.Entities.GrupoEnt

@{
    ViewBag.Title = "RegistrarGrupo";
    Layout = "~/Views/Shared/_Layout_Administracion.cshtml";
}

<main id="main" class="main">

    <div class="pagetitle">
        <h1>Registrar Usuario</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a>Inicio</a></li>
                <li class="breadcrumb-item">Usuario</li>
                <li class="breadcrumb-item active">Nuevo</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">

        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
@using (Html.BeginForm("RegistrarGrupo", "Grupo", FormMethod.Post))
{

                            @if (ViewBag.MsjPantalla != null)
                            {
                                <div id="Msj" style="text-align:center; margin-top: -5%;" class="alert alert-danger" role="alert">
                                    @ViewBag.MsjPantalla
                                </div>
                            }

                            <div class="row" style="text-align:center; position:center;">
                                <div class="col-md-12">
                                    <div class="form-group " style="text-align: left; margin-top: 25px;">
                                        <div class="form-group" style="margin-top: 25px;">
                                            <label>Curso</label>
                                            @Html.DropDownListFor(m => m.IdCurso, ViewBag.Cursos as List<SelectListItem>, new { @class="form-control form-control-lg" })
                                        </div>
                                    </div>

                                    <div class="form-group" style="text-align: left; margin-top: 25px;">
                                        <label>Descripción</label>
                                        @Html.TextBoxFor(
                                    m => m.Descripcion,
                                    new
                                    {
                                    @type = "text",
                                    @placeholder = "Descripción",
                                    @id = "descripcion",
                                    @style = "text-align: center",
                                    @class = "form-control form-control-lg",
                                    @required = "required"
                                    })
                                    </div>


                                    <br />
                                    <div class="row">
                                        <div class="col-lg-6 order-lg-2">
                                            <button type="submit" class="btn btn-outline-success btn-lg px-5">Registar</button>
                                        </div>
                                        <div class="col-lg-6 order-lg-1">
                                            <button type="button" class="btn btn-secondary btn-lg px-5" onclick="window.history.back();">Regresar</button>
                                        </div>
                                    </div>
                                    <br>
                                </div>



                            </div>
}
                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->