@model IEnumerable<CCIH.Entities.ProfesorEnt>

@{
    ViewData["Title"] = "Lista de Profesores";
    Layout = "~/Views/Shared/_Layout_PantallasAdmin.cshtml";
}

<h1 class="titulo">Lista de Profesores</h1>

<div style="padding: 50px;">
    <div class="card" style="padding-top: 25px;">
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre completo</th>
                        <th>Correo</th>
                        <th>Teléfono</th>
                        <th>Especialización</th>
                        <th style="text-align: center;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre @item.Apellido1 @item.Apellido2</td>
                            <td>@item.Correo</td>
                            <td>@item.Telefono</td>
                            <td>@item.Especializacion</td>
                            <td style="text-align: center;">
                                <a href="@Url.Action("Edit", "Profesores", new { id = item.IdProfesor })">Editar</a> |
                                <a href="@Url.Action("ChangeStatus", "Profesores", new { id = item.IdProfesor })" onclick="return confirm('¿Está seguro que desea cambiar el estado de este profesor?');">Cambiar Estado</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
