@model CCIH.Entities.UsuarioRegistrarEnt

@{
    ViewBag.Title = "Registrarse";
}
@using (Html.BeginForm("Registrarse", "Login", FormMethod.Post))
{
    <section id="hero">
        <div class="container position-relative">
            <div class="row justify-content-center align-items-center h-1">
                <div class="col-12 col-md-8 col-lg-6 col-xl-5" style="margin-top: -47px; width: 1000px">
                    <div class="card-body p-2 text-center" style="background-color: rgba(255, 255, 255, 0.7); ">

                        
                        <div class="mb-md-5 mt-md-4 pb-1">
                            <h2 class="fw-bold text-uppercase" style="color: black">Proceso de Registro</h2>

                            <p class="text-black-70 mb-5">Por favor ingrese la informacion para registrarse en nuestra plataforma!</p>
                            @if (ViewBag.MsjPantalla != null)
                            {
                                <div id="Msj" style="text-align:center; margin-top: -5%;" class="alert alert-danger" role="alert">
                                    @ViewBag.MsjPantalla
                                </div>
                            }

                            <div class="row" style="text-align:center; position:center;">
                                <div class="col-md-6">
                                    <div class="form-group " style="width: 450px; text-align: left">
                                        <label>Correo electrónico</label>
                                        @Html.TextBoxFor(
                                        m => m.Correo,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Correo Electronico",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width:450px; text-align:left">
                                        <label>Nombre</label>
                                        @Html.TextBoxFor(
                                        m => m.Nombre,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Nombre",
                                        @id = "nombre",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Primer Apellido</label>
                                        @Html.TextBoxFor(
                                        m => m.Apellido1,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Primer Apellido",
                                        @id = "pApellido",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Segundo Apellido</label>
                                        @Html.TextBoxFor(
                                        m => m.Apellido2,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Segundo Apellido",
                                        @id = "sApellido",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Fecha Nacimiento</label>
                                        @Html.TextBoxFor(
                                        m => m.FechaNacimiento,
                                        new
                                        {
                                        @type = "date",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg"
                                        })
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Teléfono</label>
                                        @Html.TextBoxFor(
                                        m => m.Telefono,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Teléfono",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Dirección</label>
                                        @Html.TextBoxFor(
                                        m => m.Direccion,
                                        new
                                        {
                                        @type = "text",
                                        @placeholder = "Dirección",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Contraseña</label>
                                        @Html.TextBoxFor(
                                        m => m.PwUsuario,
                                        new
                                        {
                                    @type = "password",
                                        @placeholder = "Contraseña",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    <div class="form-group" style="width: 450px; text-align: left">
                                        <label>Repita Contraseña</label>
                                        @Html.TextBoxFor(
                                        m => m.ConfirmarPwUsuario,
                                        new
                                        {
                                        @type = "password",
                                        @placeholder = "Repita Contraseña",
                                        @style = "text-align: center",
                                        @class = "form-control form-control-lg",
                                        @required = "required"
                                        })
                                    </div>

                                    

                                    <!-- Modal -->
                                    <button type="button" class="btn btn-outline-success btn-lg px-5" style="margin-top: 5%;" data-bs-toggle="modal" data-bs-target="#basicModal">
                                        Registrarme!
                                    </button>
                                    <br>
                                </div>



                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- End Hero -->
    <!-- Modal -->
    <div class="modal fade" id="basicModal" tabindex="-1">
        <div class="modal-dialog justify-content-center align-items-center" style="margin-top: 15%">
            <div class="modal-content justify-content-center align-items-center">
                <div class="modal-header align-items-center">
                <h5 class="modal-title justify-content-center align-items-center"><i class="bi bi-patch-question text-success"></i>  Alerta  <i class="bi bi-patch-question text-success"></i></h5>
                </div>
                <div class="modal-body" style="text-align:center">
                    Esta seguro de continuar?
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                 <button type="submit" class="btn btn-success">Continuar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- End Modal-->
}

<script>
    // Esperar 5 segundos y luego ocultar el mensaje
    setTimeout(function () {
        var mensajeDiv = document.getElementById('Msj');
        mensajeDiv.style.display = 'none';

    }, 5000); // 5000 milisegundos = 5 segundos

</script>