@model CCIH.Entities.ContactoEnt


@{
    ViewBag.Title = "Contact";
}


<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
        <div class="container">
            <h2>Contactenos</h2>
            <p>En el Centro Cultural de Idiomas Heredia somos una empresa que busca ayudar a las personas con su desarrollo personal y profesional para que se comuniquen de una mejor manera y tengan un conocimiento del lenguaje exitoso.</p>
        </div>
    </div><!-- End Breadcrumbs -->
    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
        <div data-aos="fade-up">
            <iframe style="border:0; width: 100%; height: 350px;" src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d292.0405310002244!2d-84.11498625167476!3d9.999226319164432!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0fac44efe7c7f%3A0x26d577c39f71f661!2sCentro%20Cultural%20de%20Idiomas%20de%20Heredia!5e0!3m2!1sen!2scr!4v1675997923806!5m2!1sen!2scr" frameborder="0" allowfullscreen></iframe>
        </div>

        <div class="container" data-aos="fade-up">

            <div class="row mt-5">

                <div class="col-lg-4">
                    <div class="info">
                        <div class="address">
                            <i class="bi bi-geo-alt"></i>
                            <h4>Direccion:</h4>
                            <p>Heredia Centro, Costado Este del Liceo de Heredia</p>
                        </div>

                        <div class="email">
                            <i class="bi bi-envelope"></i>
                            <h4>Email:</h4>
                            <p>info@inglescostarica.com</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Telefono:</h4>
                            <p>+506 2237 2792</p>
                        </div>

                        <div class="phone">
                            <i class="bi bi-phone"></i>
                            <h4>Horarios:</h4>
                            <p>Lun a Jue - 8 AM a 8 PM</p>
                            <p>Viernes 9 AM a 7 PM</p>
                            <p>Sábado 8 AM a 5 PM</p>
                        </div>

                    </div>

                </div>

                <div class="col-lg-8 mt-5 mt-lg-0">

                    @using (Html.BeginForm("", "", FormMethod.Post))
                    {
                        <div class="row">
                            <div class="col-md-6 form-group">
                                @Html.TextBoxFor(
                                        m => m.Nombre,
                                        new {@type = "text",
                                            @placeholder = "Nombre",
                                            @class = "form-control",
                                            @required = "true"
                                        })
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                @Html.TextBoxFor(
                                        m => m.CorreoElectronico,
                                        new{ @type = "email",
                                            @placeholder = "Correo Electronico",
                                            @class = "form-control",
                                            @required = "true"
                                        })
                            </div>
                        </div> 

                        <br/>

                        <div class="row">
                            <div class="col-md-6 form-group">
                                @Html.TextBoxFor(
                                        m => m.Telefono,
                                        new{
                                            @type = "text",
                                            @placeholder = "Telefono",
                                            @class = "form-control",
                                            @required = "true"
                                        })
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                @Html.TextBoxFor(
                                        m => m.Curso,
                                        new
                                             {
                                            @type = "text",
                                            @placeholder = "Curso a consultar",
                                            @class = "form-control",
                                            @required = "true"
                                        })
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            @Html.TextBoxFor(
                                    m => m.Motivo,
                                    new
                                         {
                                        @type = "text",
                                        @placeholder = "Motivo",
                                        @class = "form-control",
                                        @required = "true"
                                    })
                        </div>
                        <div class="form-group mt-3">
                            @Html.TextAreaFor(
                                    m => m.Mensaje,
                                    new
                                         {
                                        @type = "text",
                                        @placeholder = "Mensaje",
                                        @class = "form-control",
                                        @rows = "5",
                                        @required = "true",
                                        @style = "height: 200px;"
                                    })
                        </div>
                        <div class="my-3">
                        </div>
                        <div class="text-center"><button type="button" class="btn btn-primary">Enviar Mensaje</button></div>
                    }

                    </div>

            </div>

        </div>
    </section><!-- End Contact Section -->

</main><!-- End #main -->
